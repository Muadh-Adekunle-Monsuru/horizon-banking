generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  firstName String
  lastName  String 
  Banks     Banks[] 
}

type Banks {
  name          String
  balance       Int
  accountNumber String
  transactions  Transactions[]
}

type Transactions {
  id              String
  senderAccount   String
  senderBank      String
  receiverAccount String
  receiverBank    String
  receiverName    String
  date            DateTime @default(now())
  amount          Int
  type            String
  narration       String
}
